<div class="master-dish-index">
  <%= render "searches/search_form" %>
  <div class="master-dish-index__info">
     <%= link_to "投稿する", new_admins_master_menu_path %>
    <!--メニュー基本情報-->
    <% @master_menus.each do |master_menu| %>
    <div class="info__table">
      <div class="info__table--element">
        <div class="test">
        <%= attachment_image_tag master_menu, :image, :fill, 250, 250, format: 'jpeg' %></br>

          <%= link_to admins_master_menu_path(master_menu.id) do %>
            <%= master_menu.name %>
          <% end %>
        <!--投稿メニューは投稿者の名前を表示　マスターは365menuと表示-->
          <% if master_menu.is_master == false %>
            by <%= Customer.find(master_menu.customer_id).name %>
          <% else %>
            by 365menu
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
    <%= paginate(@master_menus) %>
  </div>
</div>
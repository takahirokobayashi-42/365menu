<div class="top">
<div class="container">
<div class="row">
  <div class="col-xl-12">
    <br>
    <div>
      <strong class="admins-title-name" >メニュージャンル一覧・追加</strong>

      <div class="col-lg-12 text-center">
        <%= form_for @menu_genre, :url => {:action => :create} do |f| %>
        <div>
          メニュージャンル
          <%= f.text_field :name  %>
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active, "有効", {value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, "無効", {value: :false, style: "display: inline-block;"} %>
          <%= f.submit "追加", class: "btn btn-2" %>
        </div>
      <% end %>
      </div>

    <div class="col-lg-12 text-center">
      <div class="admins-item-body">
      <table class="table admins-custommer-show-table">
        <thead>
          <tr>
            <th>メニュージャンル</th>
            <th>状態</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @menu_genres.each do |menu_genre| %>
            <tr>
              <td><%= menu_genre.name %></td>
              <% if menu_genre.is_active == true %>
                <td>有効</td>
              <% elsif menu_genre.is_active == false %>
                <td>無効</td>
              <% end %>
              <td style="width:20%"><%= link_to "編集する", edit_admins_menu_genre_path(menu_genre), class: "btn btn-1 btn-sm w-15" %></td>
              <td><%= link_to "削除する", admins_menu_genre_path(menu_genre), method: :delete, "data-confirm" => '本当に削除しますか？', class: "btn btn-1 btn-sm w-15" %></td>
            </tr>
          <% end %>
         </tbody>
       </table>
      </div>

     </div>
  </div>
</div>
</div>
<div>
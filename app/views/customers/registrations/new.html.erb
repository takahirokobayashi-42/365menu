<div class="top">
  <div class="container">
    <div class="row">
      <h5 class="col-lg-6 offset-lg-1 mt-5 mb-0"><strong class="customer-title">新規会員登録</strong></h5>
    </div>
    <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>
      
      <div class="field row mt-2">
        <span class="col-lg-2">名前</span>
        <%= f.label :name, '名前', class: "col-lg-1 text-right" %><%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-lg-3" %>
      </div>
      <div class="field row mt-2">
        <%= f.label :email, 'メールアドレス', class: "col-lg-3" %>
        <%= f.email_field :email, autocomplete: "email", class: "col-lg-3" %>
      </div>
      <div class="field row mt-2">
        <div class="password col-lg-3">
          <%= f.label :password, 'パスワード' %><% if @minimum_password_length %>
            <span>(<%= @minimum_password_length %>文字以上)</span>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-lg-3" %>
      </div>
      <div class="field row mt-2">
        <%= f.label :password_confirmation, 'パスワード(確認用)', class: "col-lg-3" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-lg-3" %>
      </div>
      <div class="row mt-3">
        <div class="actions col-lg-12 text-center">
          <%= f.submit "新規登録", class: "btn btn-2 px-5" %>
        </div>
      </div>
    <% end %>
    <div class="row">
      <h5 class="col-lg-6  offset-lg-1"><strong class="customer-title">既に登録済みの方</strong></h5>
    </div>
    <div class="row mt-1">
      <div class="offset-lg-2">
        <%- if controller_name != 'sessions' %>
          <p><strong><%= link_to "こちら", new_session_path(resource_name) %></strong>　からログインしてください。</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
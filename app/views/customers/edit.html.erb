<div class="top">
  <div class="container">
    <div class="row">
      <h5 class="col-lg-6 offset-lg-2 mt-5 mb-0"><strong class="customer-title">登録情報編集</strong></h5>
    </div>
    <div class="row">
      <div class="error-message offset-lg-2">
        <%#= render "layouts/error_msg", resource: current_customer %>
      </div>
    </div>
    <%= form_with model:current_customer, url: customer_path, method: :patch, local:true do |f| %>
      <div class="form-group row">
        <span class="col-lg-2">名前</span>
        <%= f.label :name,　class: "col-lg-1 text-right" %><%= f.text_field :name, class: "col-lg-3" %>
      <div class="form-group row">
        <%= f.label :email, 'メールアドレス', class: "col-lg-3" %>
        <%= f.email_field :email, class: "col-lg-3" %>
      </div>
      <div class="form-group row">
        <div class="col-lg-3 offset-lg-2">
          <%= f.submit '編集内容を保存する', class: "btn btn-1" %>
        </div>
        <div class="col-lg-1 offset-lg-4">
          <%= link_to '退会する', customers_unsubscribe_path, class: "btn btn-sm btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
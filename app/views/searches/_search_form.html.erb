<% if customer_signed_in? || admin_signed_in? %>
  <div style="text-align:center;">
    <span>
   <%= form_tag(searches_search_path, method: :get) do %>
　　<%= select_tag 'range' ,options_for_select([['会員', '1'], ['レシピ', '2'], ['メニュー', '3']]) %>
　　  <%= text_field_tag (:word), "", {class: "suggest"} %>

   　　<%= submit_tag "検索" %>
   　</span>
  </div>
   <% end %>
<% end %>
<script>
$( function() {
  $( '.suggest' ).autocomplete({
      autoFocus: true,  //テキストフィールドの値をフォーカスされたアイテムの値で置き換える
      source: "/master_dishes/auto_complete.json",  //サジェストのデータを呼び出す
      minLength: 1  //オートコンプリートが動作する文字数を指定
  });
});
</script>